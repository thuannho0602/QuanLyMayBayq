
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <div class="container">
        <div class="login-wrap">
            <div class="login-content">
                    <h3 style="text-align:center;font-size: x-large; ">Đăng Nhập</h3>
                <div class="login-form">
                    @using (Html.BeginForm("LoginAction", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        <div class="form-group">
                            <label>Tài Khoản</label>
                            <input class="au-input au-input--full" type="email" name="username" placeholder="Tài Khoản">
                        </div>
                        <div class="form-group">
                            <label>Mật Khẩu</label>
                            <input class="au-input au-input--full" type="password" name="password" placeholder="Mật Khẩu">
                        </div>
                       
                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit" id="login">Đăng Nhập</button>
                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit" id="createUser">Đăng Ký</button>
                    }
                    @*<form action="" method="post">
                    </form>*@
                   
                </div>
            </div>
        </div>
    </div>
</div>
