@model CBBApplication.Models.CreateUser;
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <div class="container">
        <div class="login-wrap">
            <div class="login-content">
                    <h3 style="text-align:center;font-size: x-large; ">Đăng Ký</h3>
                <div class="login-form">
                    @using (Html.BeginForm("CreateUser", "Account", FormMethod.Post))
                    {
                                <div class="form-group">
                                        <label>FirstName</label>
                                    @Html.TextBoxFor(c=>c.FirstName, "",new {@class = "au-input au-input--full",@placeholder="Tên"})
                            @*<input class="au-input au-input--full" type="email" name="username" placeholder="Tài Khoản">*@
                                </div>
                                <div class="form-group">
                                          <label>LastName</label>
                                      @Html.TextBoxFor(c=>c.LastName, "",new {@class = "au-input au-input--full",@placeholder="Họ"})
                                      @*<input class="au-input au-input--full" type="email" name="username" placeholder="Tài Khoản">*@
                                </div>
                                <div class="form-group">
                                     <label>PhoneNumber</label>
                                      @Html.TextBoxFor(c=>c.SoDienThoai, "",new {@class = "au-input au-input--full",@placeholder="Số Điện Thoại"})
                                    @*<input class="au-input au-input--full" type="email" name="username" placeholder="Tài Khoản">*@
                                </div>
                                <div class="form-group">
                                    <label>UserName</label>
                                    @Html.TextBoxFor(c=>c.UserName, "",new {@class = "au-input au-input--full",@placeholder="UserName"})
                                    @*<input class="au-input au-input--full" type="email" name="username" placeholder="Tài Khoản">*@
                                </div>
                                <div class="form-group">
                                    <label>Tài Khoản</label>
                                    @Html.TextBoxFor(c=>c.Email, "",new {@class = "au-input au-input--full",@placeholder="Tài Khoản"})
                                    @*<input class="au-input au-input--full" type="email" name="username" placeholder="Tài Khoản">*@
                                </div>
                                <div class="form-group">
                                    <label>Mật Khẩu</label>
                                    @Html.PasswordFor(c=>c.Password,new {@class = "au-input au-input--full",@placeholder="Mật Khẩu"})
                                    @* <input class="au-input au-input--full" type="password" name="password" placeholder="Mật Khẩu">*@
                                </div>
                                <div class="form-group">
                                     <label>Email</label>
                                    @Html.TextBoxFor(c=>c.Email, "",new {@class = "au-input au-input--full",@placeholder="Email"})
                                    @*<input class="au-input au-input--full" type="email" name="email" placeholder="Email">*@
                                </div>
                                <div class="form-group">
                                     <label>Ngày Sinh</label>
                                     @Html.TextBoxFor(c=>c.NgaySinh, "{0:yyyy-MM-dd}",new {@class = "au-input au-input--full",@placeholder="Ngày Tháng Năm Sinh"})
                                     @*<input class="au-input au-input--full" type="date" name="date" placeholder="Ngày Tháng Năm Sinh">*@
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit" id="createUser">Đăng Ký</button>

                    }
                    @*<form action="" method="post">
                    </form>*@

                </div>
            </div>
        </div>
    </div>
</div>

